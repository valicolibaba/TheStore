@model Store.Web.Models.CardViewModel

@{
    ViewBag.Title = "Index";
}

<div class="well well-sm"><h3>Comanda ta</h3></div>

<div class="container">
    <table id="cart" class="table table-hover table-condensed">
        <thead>
            <tr>
                <th style="width:90%">Produs</th>
                <th style="width:5%"></th>
                <th style="width:5%">Preț</th>
            </tr>
        </thead>
        <tbody>
        @foreach (var product in Model.Products)
        {
            <tr>
                <td data-th="Produs">
                    <div class="row">
                        <div class="col-sm-2 hidden-xs"><img src="@product.ImageUrl" alt="@product.Name" class="img-responsive"/>
                        </div>
                        <div class="col-sm-10">
                            <h4 class="nomargin">@product.Name</h4>
                            <p>@product.Ingredients</p>
                        </div>
                    </div>
                </td>
                <td></td>
                <td data-th="Pret">@product.Price lei</td>
                <td ><a href="@Url.Action("DeleteProductFromCart", "Cart", new { @productId = product.Id })" class="btn btn-danger"> X</a></td>
            </tr>
        }
        </tbody>
        <tfoot>
            <tr class="visible-xs">
                <td class="text-center"><strong>Total @Model.TotalPrice lei</strong></td>
            </tr>
            <tr>
                <td><a href="@Url.Action("Index", "Home")" class="btn btn-success"><i class="fa fa-angle-left"></i> Continuă cumpărăturile</a></td>
                <td class="hidden-xs "><strong>Total @Model.TotalPrice lei</strong></td>
                <td><a href="@Url.Action("Purchase", "Product")" class="btn btn-success btn-block">Finalizeaza comanda<i class="fa fa-angle-right"></i></a></td>
            </tr>
        </tfoot>
    </table>
</div>

